{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": false,
    "paths": {},
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "ts-node": {
    "swc": false
  }
}
